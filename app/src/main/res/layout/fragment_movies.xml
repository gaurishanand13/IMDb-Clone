<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#212121"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".LoggedInFragments.MoviesFragment">

   <LinearLayout
           android:layout_marginTop="15dp"
           android:layout_marginBottom="15dp"
           android:id="@+id/linearLayout"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent" >
       <LinearLayout
               android:paddingBottom="10dp"
               android:background="#323232"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
           <TextView
                   android:paddingLeft="15dp"
                   android:layout_gravity="center"
                   android:textColor="@android:color/white"
                   android:text="Most Popular Movies"
                   android:textSize="30sp"
                   android:layout_weight="5"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"/>
           <Button
                   android:gravity="center"
                   android:layout_marginRight="5dp"
                   android:padding="0dp"
                   android:layout_gravity="center"
                   android:textSize="15sp"
                   android:textColor="@android:color/holo_blue_bright"
                   android:text="SEE ALL"
                   android:id="@+id/popularMoviesSeeAllbtn"
                   android:background="#212121"
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"/>
       </LinearLayout>
       <androidx.recyclerview.widget.RecyclerView
               android:layout_marginBottom="15dp"
               android:background="#323232"
               android:id="@+id/popularMoviesRecyclerView"
               android:layout_width="match_parent"
               android:paddingBottom="20dp"
               android:layout_height="match_parent"/>
       <LinearLayout
               android:paddingBottom="10dp"
               android:background="#323232"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
           <TextView
                   android:paddingLeft="15dp"
                   android:layout_gravity="center"
                   android:textColor="@android:color/white"
                   android:text="Top Rated Movies"
                   android:textSize="30sp"
                   android:layout_weight="5"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"/>
           <Button
                   android:gravity="center"
                   android:layout_marginRight="5dp"
                   android:padding="0dp"
                   android:layout_gravity="center"
                   android:textSize="15sp"
                   android:textColor="@android:color/holo_blue_bright"
                   android:text="SEE ALL"
                   android:id="@+id/topRatedMoviesSeeAllbtn"
                   android:background="#212121"
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"/>
       </LinearLayout>
       <androidx.recyclerview.widget.RecyclerView
               android:layout_marginBottom="15dp"
               android:background="#323232"
               android:paddingBottom="20dp"
               android:id="@+id/TopRatedMoviesRecyclerView"
               android:layout_width="match_parent"
               android:layout_height="match_parent"/>
       <LinearLayout
               android:paddingBottom="10dp"
               android:background="#323232"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
           <TextView
                   android:paddingLeft="15dp"
                   android:layout_gravity="center"
                   android:textColor="@android:color/white"
                   android:text="Coming Soon"
                   android:textSize="30sp"
                   android:layout_weight="5"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"/>
           <Button
                   android:gravity="center"
                   android:layout_marginRight="5dp"
                   android:padding="0dp"
                   android:layout_gravity="center"
                   android:textSize="15sp"
                   android:textColor="@android:color/holo_blue_bright"
                   android:text="SEE ALL"
                   android:id="@+id/ComingSoonMoviesSeeAllbtn"
                   android:background="#212121"
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"/>
       </LinearLayout>
       <androidx.recyclerview.widget.RecyclerView
               android:layout_marginBottom="15dp"
               android:background="#323232"
               android:paddingBottom="20dp"
               android:id="@+id/ComingSoonMoviesRecyclerView"
               android:layout_width="match_parent"
               android:layout_height="match_parent"/>
       <LinearLayout
               android:paddingBottom="10dp"
               android:background="#323232"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
           <TextView
                   android:paddingLeft="15dp"
                   android:layout_gravity="center"
                   android:textColor="@android:color/white"
                   android:text="In Theaters"
                   android:textSize="30sp"
                   android:layout_weight="5"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"/>
           <Button
                   android:gravity="center"
                   android:layout_marginRight="5dp"
                   android:padding="0dp"
                   android:layout_gravity="center"
                   android:textSize="15sp"
                   android:textColor="@android:color/holo_blue_bright"
                   android:text="SEE ALL"
                   android:id="@+id/inTheatresMoviesSeeAllbtn"
                   android:background="#212121"
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"/>
       </LinearLayout>
       <androidx.recyclerview.widget.RecyclerView
               android:layout_marginBottom="15dp"
               android:background="#323232"
               android:paddingBottom="20dp"
               android:id="@+id/inTheatresMoviesRecyclerView"
               android:layout_width="match_parent"
               android:layout_height="match_parent"/>
   </LinearLayout>

</androidx.core.widget.NestedScrollView>