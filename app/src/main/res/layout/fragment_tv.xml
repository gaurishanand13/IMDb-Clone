<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#212121"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".LoggedInFragments.TVFragment">

    <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        <androidx.viewpager.widget.ViewPager
                android:background="#212121"
                android:id="@+id/TVviewPager"
                android:layout_width="match_parent"
                android:layout_height="300dp">
        </androidx.viewpager.widget.ViewPager>
        <LinearLayout
                android:paddingBottom="10dp"
                android:background="#323232"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:paddingLeft="15dp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white"
                    android:text="Coming Today"
                    android:textSize="30sp"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            <Button
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:padding="0dp"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textColor="@android:color/holo_blue_bright"
                    android:text="SEE ALL"
                    android:id="@+id/comingTodayTVSeeAllbtn"
                    android:background="#212121"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_marginBottom="15dp"
                android:background="#323232"
                android:paddingBottom="20dp"
                android:id="@+id/comingTodayTVShowRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        <LinearLayout
                android:paddingBottom="10dp"
                android:background="#323232"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:paddingLeft="15dp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white"
                    android:text="Popular Shows"
                    android:textSize="30sp"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            <Button
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:padding="0dp"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textColor="@android:color/holo_blue_bright"
                    android:text="SEE ALL"
                    android:id="@+id/popularTvShowsSeeAllbtn"
                    android:background="#212121"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_marginBottom="15dp"
                android:background="#323232"
                android:id="@+id/popularTvShowsRecyclerView"
                android:layout_width="match_parent"
                android:paddingBottom="20dp"
                android:layout_height="match_parent"/>
        <LinearLayout
                android:paddingBottom="10dp"
                android:background="#323232"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:paddingLeft="15dp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white"
                    android:text="Top Rated Shows"
                    android:textSize="30sp"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            <Button
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:padding="0dp"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textColor="@android:color/holo_blue_bright"
                    android:text="SEE ALL"
                    android:id="@+id/topRatedTVShowsSeeAllbtn"
                    android:background="#212121"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_marginBottom="15dp"
                android:background="#323232"
                android:paddingBottom="20dp"
                android:id="@+id/TopRatedTVShowsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>